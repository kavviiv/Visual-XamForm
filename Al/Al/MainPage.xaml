             mc:Ignorable="d"
             x:Class="Al.MainPage">

    <StackLayout BackgroundColor="#2D6FFF">
        <!-- Place new controls here -->

        <Image Source="b1.png" />

        <Label Text="Album Shop" HorizontalTextAlignment="Center" TextColor="#FFFFFF" FontSize="Title" FontAttributes="Bold"  />
